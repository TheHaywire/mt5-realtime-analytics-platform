# MT5 Real-Time Analytics Platform Configuration
# Copy this file to .env and update with your settings

# ======================
# APPLICATION SETTINGS
# ======================
APP_NAME="MT5 Real-Time Analytics Platform"
VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=true

# ======================
# DATABASE CONFIGURATION
# ======================
DATABASE_URL=sqlite:///./data/mt5_analytics.db
# For PostgreSQL: postgresql://user:password@localhost/mt5_analytics
# For MySQL: mysql://user:password@localhost/mt5_analytics

# ======================
# REDIS CONFIGURATION  
# ======================
REDIS_URL=redis://localhost:6379
# For Redis with auth: redis://:password@localhost:6379
# For Redis Cloud: redis://username:password@host:port

# ======================
# SECURITY SETTINGS
# ======================
SECRET_KEY=your-super-secret-key-change-in-production-12345
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-67890
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ======================
# CORS CONFIGURATION
# ======================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com

# ======================
# MT5 CONFIGURATION
# ======================
MT5_SYMBOLS=GOLD,EURUSD,GBPUSD,USDJPY
MT5_SERVER=XMGlobal-MT5 2
MT5_LOGIN=12345678
MT5_PASSWORD=your-mt5-password
MT5_TIMEOUT=10000

# ======================
# ANALYTICS SETTINGS
# ======================
ROLLING_WINDOW_HOURS=168
MIN_SAMPLE_SIZE=25
CONFIDENCE_LEVEL=0.95
UPDATE_INTERVAL_SECONDS=10

# ======================
# ALERT CONFIGURATION
# ======================
# Telegram Bot Setup (get token from @BotFather)
TELEGRAM_BOT_TOKEN=1234567890:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
TELEGRAM_CHAT_ID=123456789

# Email Setup (Gmail example)
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# ======================
# RATE LIMITING
# ======================
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# ======================
# PRODUCTION SETTINGS
# ======================
# SSL Configuration (for HTTPS)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
LOG_LEVEL=INFO

# ======================
# DOCKER ENVIRONMENT
# ======================
# Used by docker-compose.yml
POSTGRES_DB=mt5_analytics
POSTGRES_USER=mt5_user
POSTGRES_PASSWORD=secure-password-123
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ======================
# FEATURE FLAGS
# ======================
ENABLE_DEMO_MODE=true
ENABLE_TELEGRAM_ALERTS=true
ENABLE_EMAIL_ALERTS=true
ENABLE_WEBHOOK_ALERTS=false

# ======================
# PERFORMANCE TUNING
# ======================
MAX_WORKERS=4
WORKER_TIMEOUT=30
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30