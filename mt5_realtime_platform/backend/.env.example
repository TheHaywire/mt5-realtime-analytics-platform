# MT5 Connection Configuration
# Replace with your actual MT5 account credentials
MT5_LIVE_LOGIN=your_account_number
MT5_LIVE_PASSWORD=your_password
MT5_LIVE_SERVER=your_server_name

# Example:
# MT5_LIVE_LOGIN=123456789
# MT5_LIVE_PASSWORD=YourPassword123
# MT5_LIVE_SERVER=ICMarkets-Demo01

# Database Configuration
DATABASE_URL=sqlite:///./trading_analytics.db

# API Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:8080"]

# Feature Flags
ENABLE_DEMO_DATA=true
DEBUG_MODE=false
ENABLE_PATTERN_RECOGNITION=true
ENABLE_ALERTS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=trading_analytics.log

# Analytics Configuration
MIN_SAMPLE_SIZE=30
SIGNIFICANCE_THRESHOLD=0.05
CONFIDENCE_LEVEL=95.0
LOOKBACK_PERIODS=1000

# Performance Settings
MAX_WEBSOCKET_CONNECTIONS=100
DATA_UPDATE_INTERVAL=1
ANALYTICS_UPDATE_INTERVAL=300

# Trading Configuration
DEFAULT_SYMBOLS=["XAUUSD", "EURUSD", "GBPUSD", "USDJPY"]
DEFAULT_TIMEFRAMES=["M1", "M5", "M15", "H1", "H4", "D1"]

# Risk Management
MAX_RISK_PER_TRADE=0.02
MAX_CORRELATION=0.7
MAX_DRAWDOWN_THRESHOLD=0.15

# Email Notifications (Optional)
ENABLE_EMAIL_ALERTS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Telegram Notifications (Optional)
ENABLE_TELEGRAM_ALERTS=false
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id