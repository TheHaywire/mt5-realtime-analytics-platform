# PROFESSIONAL TRADING SYSTEM - Environment Configuration\n# =====================================================\n# Copy this file to .env and configure with your actual credentials\n# NEVER commit .env to version control - credentials must stay private\n\n# MT5 Demo Account (for testing and development)\n# Get these from your broker's demo account setup\nMT5_DEMO_LOGIN=12345678\nMT5_DEMO_PASSWORD=demo_password_here\nMT5_DEMO_SERVER=demo_server_name_here\n\n# MT5 Live Account (ONLY when ready for live trading)\n# CRITICAL: Keep these credentials extremely secure\n# MT5_LIVE_LOGIN=your_live_login\n# MT5_LIVE_PASSWORD=your_live_password  \n# MT5_LIVE_SERVER=your_live_server\n\n# Database Configuration\nDATABASE_URL=sqlite:///./data/trading_system.db\n# For production, use PostgreSQL:\n# DATABASE_URL=postgresql://user:password@localhost:5432/trading_system\n\n# Redis Configuration (for caching and session management)\nREDIS_URL=redis://localhost:6379/0\n\n# Alert System Configuration\n# Email alerts\nSMTP_SERVER=smtp.gmail.com\nSMTP_PORT=587\nSMTP_USERNAME=your_email@gmail.com\nSMTP_PASSWORD=your_app_password\nALERT_EMAIL_FROM=trading_system@yourcompany.com\nALERT_EMAIL_TO=alerts@yourcompany.com\n\n# SMS Alerts (Twilio)\nTWILIO_ACCOUNT_SID=your_twilio_account_sid\nTWILIO_AUTH_TOKEN=your_twilio_auth_token\nTWILIO_PHONE_FROM=+1234567890\nTWILIO_PHONE_TO=+1234567890\n\n# Slack Notifications\nSLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK\nSLACK_CHANNEL=#trading-alerts\n\n# API Keys for Data Providers (backup sources)\nALPHA_VANTAGE_API_KEY=your_alpha_vantage_key\nYAHOO_FINANCE_API_KEY=your_yahoo_finance_key\n\n# Security and Authentication\nSECRET_KEY=your-super-secret-key-change-this-in-production\nENCRYPTION_KEY=your-encryption-key-for-sensitive-data\n\n# Environment Settings\nENVIRONMENT=development  # development, staging, production\nDEBUG=true\nPAPER_TRADING=true  # Start with paper trading - ALWAYS\n\n# Logging Configuration\nLOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL\nLOG_TO_FILE=true\nLOG_TO_CONSOLE=true\nLOG_MAX_SIZE_MB=100\nLOG_BACKUP_COUNT=10\n\n# Performance and Monitoring\nMONITORING_ENABLED=true\nPROFILING_ENABLED=false  # Enable for debugging only\nMETRICS_EXPORT=false  # Export to Prometheus/monitoring system\n\n# Rate Limiting and API Controls\nMAX_REQUESTS_PER_MINUTE=100\nAPI_TIMEOUT_SECONDS=30\nMAX_RETRIES=3\n\n# Backup and Recovery\nBACKUP_ENABLED=true\nBACKUP_INTERVAL_HOURS=24\nBACKUP_RETENTION_DAYS=30\nBACKUP_LOCATION=./backups/\n\n# Trading Hours and Sessions\n# Define trading sessions in your timezone\nTRADING_TIMEZONE=UTC\nLONDON_OPEN=08:00\nLONDON_CLOSE=16:00\nNY_OPEN=13:00\nNY_CLOSE=21:00\nASIAN_OPEN=23:00\nASIAN_CLOSE=07:00\n\n# Risk Management Overrides (use with extreme caution)\n# These override config.yaml values - only use for emergency adjustments\n# RISK_OVERRIDE_MAX_DAILY_LOSS=0.02  # 2% max daily loss\n# RISK_OVERRIDE_MAX_POSITION_SIZE=0.005  # 0.5% max per trade\n# RISK_OVERRIDE_EMERGENCY_STOP=0.05  # 5% emergency stop\n\n# Development Tools\nHOT_RELOAD=true  # Reload code changes automatically\nSAVE_DEBUG_DATA=true  # Save extra debug information\nVERBOSE_LOGGING=false  # Extra verbose logs (development only)\n\n# Testing Configuration\nTEST_DATABASE_URL=sqlite:///./tests/test_database.db\nTEST_DATA_DIR=./tests/data/\nMOCK_MT5_CONNECTION=true  # Use mock MT5 for testing\n\n# Advanced Configuration\n# Memory and Performance\nMAX_MEMORY_USAGE_MB=2048\nTHREAD_POOL_SIZE=8\nASYNC_WORKERS=4\n\n# Data Retention\nTICK_DATA_RETENTION_DAYS=7\nBAR_DATA_RETENTION_DAYS=365\nTRADE_LOG_RETENTION_DAYS=2555  # 7 years for compliance\nSYSTEM_LOG_RETENTION_DAYS=90\n\n# Broker-Specific Settings\n# Adjust these based on your specific broker requirements\nBROKER_TIMEZONE=UTC\nBROKER_COMMISSION_PER_LOT=7.0\nBROKER_MIN_LOT_SIZE=0.01\nBROKER_MAX_LOT_SIZE=100.0\nBROKER_LOT_STEP=0.01\nBROKER_MAX_SPREAD_PIPS=5\n\n# =============================================================================\n# SECURITY NOTES:\n# \n# 1. NEVER commit this file with real credentials to version control\n# 2. Use strong, unique passwords for all accounts\n# 3. Enable 2FA on your trading accounts when possible\n# 4. Regularly rotate passwords and API keys\n# 5. Use environment-specific configurations (dev/staging/prod)\n# 6. Limit API key permissions to minimum required\n# 7. Monitor for unauthorized access attempts\n# \n# =============================================================================\n\n# =============================================================================\n# TRADING SAFETY REMINDERS:\n#\n# 1. ALWAYS start with PAPER_TRADING=true\n# 2. NEVER use live credentials until system is fully validated\n# 3. Test everything thoroughly in demo environment first\n# 4. Start with small position sizes even in live trading\n# 5. Monitor system continuously - not set-and-forget\n# 6. Have emergency stop procedures documented and tested\n# 7. Keep backups of all configurations and trade data\n#\n# =============================================================================